<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Of Observation"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Observation"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical|start"
                />
            <TextView
                android:id="@+id/obs_name_detail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Observation"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical|start"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical|start"
                />
            <TextView
                android:id="@+id/obs_date_detail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:text="00/00/0000"
                android:textSize="16sp"
                android:gravity="center_vertical|start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Time"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical|start"
                />
            <TextView
                android:id="@+id/obs_time_detail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:text="00:00"
                android:textSize="16sp"
                android:gravity="center_vertical|start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Sighting"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical|start"
                />
            <TextView
                android:id="@+id/obs_sighting_detail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical|start"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Weather"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical|start"
                />
            <TextView
                android:id="@+id/obs_weather_detail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical|start"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Comment"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical|start"
                />
            <TextView
                android:id="@+id/obs_comment_detail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical|start"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="5dp"
            >
           <ImageView
               android:id="@+id/obs_image_detail"
               android:layout_width="match_parent"
               android:layout_height="100dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        >
        <include layout="@layout/bottom_app_bar" />
    </LinearLayout>
</RelativeLayout>